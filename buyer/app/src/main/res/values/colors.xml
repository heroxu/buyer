<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--toolbar-->
    <color name="colorPrimary">@color/white</color>
    <!-- 状态栏颜色-->
    <color name="colorPrimaryDark">@color/white</color>
    <!-- 系统主色调 -->
    <color name="colorAccent">#049ce5</color>
    <!-- 背景颜色 -->
    <color name="window_background">#F5F5F5</color>

    <!--通用颜色-->
    <color name="transparent">#00ffffff</color>
    <color name="white">@android:color/white</color>
    <color name="black">@android:color/black</color>


    <!--APP颜色-->

    <!--消息红点-->
    <color name="dot_red">#FB3A2F</color>
    <!--分割线颜色-->
    <color name="line_divider">#F1F1F1</color>

    <!-- 首页底部bar的字体颜色 -->
    <color name="tab_txt_normal">#D4D4D4</color>
    <color name="tab_txt_selected">#484848</color>

    <!--字体颜色-->
    <!--标题字体、主要字体、次要字体-->
    <color name="txt_main">#333333</color>
    <!--次要字体、二级入口（深灰）-->
    <color name="txt_gray_dark">#666666</color>
    <!--辅助字体、小字体（灰色）-->
    <color name="txt_gray">#999999</color>
    <!--辅助字体、小字体（浅灰）-->
    <color name="txt_gray_light">#C7C7C7</color>
    <!--黑色背景上的字（透明灰色）-->
    <color name="txt_gray_transparent">#DADBDA</color>
    <!--提示性文字-->
    <color name="txt_hint">#007AFF</color>
    <!--价格显示&提示性文字-->
    <color name="txt_price">#FF5B1F</color>

    <!--密码输入框-->
    <color name="pwd_stroke_normal">#D8D8D8</color>
    <color name="pwd_stroke_focus">#A6D8EB</color>

    <!--宽条目点击背景色-->
    <color name="item_wide_bg_normal">@color/white</color>
    <color name="item_wide_bg_pressed">#C7C7C7</color>


    <!--通用按钮-->
    <!--原始状态-->
    <!--背景色-->
    <color name="btn_bg_normal">#FFCD1F</color>
    <!--字体颜色-->
    <color name="btn_txt_normal">@color/txt_main</color>
    <!--点击状态-->
    <color name="btn_bg_pressed">#ECBD1C</color>
    <color name="btn_txt_pressed">@color/txt_main</color>
    <!--禁用状态-->
    <color name="btn_bg_unable">#D8D8D8</color>
    <color name="btn_txt_unable">#FFFFFF</color>

    <!--标签型按钮-->
    <!--原始状态-->
    <!--背景色-->
    <color name="btn_tag_bg_normal">#FFFFFF</color>
    <!--描边色-->
    <color name="btn_tag_stroke_normal">#EBEBEB</color>
    <!--字体颜色-->
    <color name="btn_tag_txt_normal">#EBEBEB</color>
    <!--选中状态-->
    <color name="btn_tag_bg_selected">#ECBD1C</color>
    <color name="btn_tag_txt_selected">#ECBD1C</color>
    <!--禁用状态-->
    <color name="btn_tag_bg_unable">#EBEBEB</color>
    <color name="btn_tag_txt_unable">#EBEBEB</color>

    <!--标签-->
    <color name="tag_bg">#F5F5F5</color>
    <color name="tag_txt">#999999</color>

</resources>
