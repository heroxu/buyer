<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="XqcToolbarTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="XqcTheme" parent="@style/AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="XqcTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="XqcTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="XqcTheme.NoActionBar.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="WideItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableRight">@drawable/arrow_right_selector</item>
    </style>

    <style name="WideItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">#F1F1F1</item>
    </style>

    <!-- 水平平分 -->
    <style name="DividItemHorizon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MyDividItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MyDividItemImg">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="r_percent">0.18</item>
        <item name="redPointVisibility">visible</item>
        <item name="shape">square</item>
        <item name="withStroke">true</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>

<!--        <item name="com.smyy.sharetour.buyer:r_percent">0.18</item>
        <item name="com.smyy.sharetour.buyer:redPointVisibility">visible</item>
        <item name="com.smyy.sharetour.buyer:shape">square</item>
        <item name="com.smyy.sharetour.buyer:withStroke">true</item>
        <item name="com.smyy.sharetour.buyer:strokeColor">@color/white</item>
        <item name="com.smyy.sharetour.buyer:strokeWidth">1dp</item>-->
    </style>
</resources>


