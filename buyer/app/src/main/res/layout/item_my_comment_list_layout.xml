<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/comment_item_head"
            android:layout_centerVertical="true"
            android:src="@mipmap/user_avatar"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/comment_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_15"
            android:layout_centerVertical="true"
            android:text="安妮-Anny"
            android:layout_toRightOf="@id/comment_item_head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txt_size_11"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/comment_item_time"
            android:drawablePadding="6dp"
            android:text="2017-11-23"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_item_disc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/comment_item_head"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/txt_size_13"
        android:text="上脚很好看！很棒的体验，希望nike能够越做越好！轻便、 方便运动，适合的朋友可以尝试这双鞋子哟！"/>

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_second_comments_bg"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/require_item_image"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/img_note_pic_02"/>

            <TextView
                android:id="@+id/comment_good_item_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_15"
                android:text="平衡调理 Skinceuticals 修丽…"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/require_item_image"/>


            <TextView
                android:layout_below="@id/comment_good_item_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_13"
                android:textColor="@color/txt_gray_dark"
                android:text="总额：9,918 元（含运费¥30.00）"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/require_item_image"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/append_comment"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_fount_note_type"
        android:text="@string/append_comment"
        android:gravity="center"
        android:textSize="@dimen/txt_size_13"
        android:textColor="@color/txt_gray_dark"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>