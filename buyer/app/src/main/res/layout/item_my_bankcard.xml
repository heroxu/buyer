<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lay_my_bankcard_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/space_my_bankcard_bottom"
            android:layout_alignParentTop="true"
            tools:background="@drawable/fake_bg1" />

        <ImageView
            android:id="@+id/iv_my_bankcard_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            tools:src="@mipmap/fake_logo1" />

        <TextView
            android:id="@+id/tv_my_bankcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/iv_my_bankcard_logo"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_17"
            android:textStyle="bold"
            tools:text="招商银行" />

        <TextView
            android:id="@+id/tv_my_bankcard_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_my_bankcard_name"
            android:layout_below="@+id/tv_my_bankcard_name"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_11"
            tools:text="储蓄卡" />

        <TextView
            android:id="@+id/tv_my_bankcard_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_my_bankcard_name"
            android:layout_below="@+id/tv_my_bankcard_type"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_23"
            android:textStyle="bold"
            tools:text="**** **** **** 1234" />


        <Space
            android:id="@+id/space_my_bankcard_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/tv_my_bankcard_num"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</LinearLayout>
