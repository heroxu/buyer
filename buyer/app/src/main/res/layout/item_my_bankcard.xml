<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:id="@+id/lay_my_bankcard_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_hint"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_my_bankcard_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_bank" />

        <TextView
            android:id="@+id/tv_my_bankcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_my_bankcard_logo"
            android:text="招商银行"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_my_bankcard_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_my_bankcard_name"
            android:layout_below="@+id/tv_my_bankcard_name"
            android:text="储蓄卡"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_11" />

        <TextView
            android:id="@+id/tv_my_bankcard_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_my_bankcard_name"
            android:layout_below="@+id/tv_my_bankcard_type"
            android:text="**** **** **** 1234"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_23"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>
