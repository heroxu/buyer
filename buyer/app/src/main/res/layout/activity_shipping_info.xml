<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.smyy.sharetour.buyer.view.AutoScaleHeightImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/fake_shipping_info" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lay_order_detail_bottom_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ilyoh_jybe" />

        <LinearLayout
            android:id="@+id/lay_order_bottom_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_order_contact_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="联系客服"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>