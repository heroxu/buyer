<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_product_detail_back"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/toolbar_nav_menu_padding"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ab_common_toolbar_back_selector"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_product_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_15"
            android:text="NIKE XIEZI"
            />
        <TextView
            android:id="@+id/tv_product_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_13"
            android:text="Â¥2,399"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_search_detail_share"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/toolbar_nav_menu_padding"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_share_b"/>

    <ImageView
        android:id="@+id/iv_product_detail_collect"
        android:layout_toStartOf="@+id/iv_search_detail_share"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@mipmap/ic_collection_ele"/>

</RelativeLayout>