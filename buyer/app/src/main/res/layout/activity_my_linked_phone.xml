<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/tv_my_linked_phone"
            style="@style/CommonText"
            android:gravity="center_horizontal"
            android:textSize="@dimen/txt_size_19"
            tools:text="已绑定：188 **** 8302" />

        <TextView
            style="@style/HintText.Gray"
            android:layout_marginTop="50dp"
            android:text="您已绑定手机号，若需要修改请联系客服。" />

        <TextView
            android:id="@+id/tv_my_service_tel"
            style="@style/HintText"
            android:layout_marginTop="10dp"
            tools:text="客服电话：020-1234567" />
    </LinearLayout>
</LinearLayout>