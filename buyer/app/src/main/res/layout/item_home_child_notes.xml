<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_home_notes_single_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/c_333333"
        android:textSize="24sp"
        android:text="为什么马尔代夫是旅游胜地？"
        />
    
    <VideoView
        android:id="@+id/vv_home_notes"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />

    <TextView
        android:id="@+id/tv_home_notes_single_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        />

    <LinearLayout
        android:id="@+id/ll_home_note_multiple_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_home_note_multiple_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:layout_gravity="top"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/margin_10"
            android:textColor="@color/c_333333"
            android:textSize="20sp"
            android:text="为什么马尔代夫是旅游胜地？"
             />

        <TextView
            android:id="@+id/tv_home_note_multiple_content"
            android:lineSpacingExtra="5dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:lines="2"
            android:layout_gravity="top"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/margin_10"
            android:textColor="@color/c_333333"
            android:textSize="12sp"
            android:text="第一篇汇集全世界仅有的六大永久火山熔岩湖的中心地带， 从俯视图下去然后就这样一直俯视下去了，你们知道为什 么会有这种熔岩湖..."
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_home_note_multiple_place"
            android:layout_alignParentRight="true"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@mipmap/random_icon_four"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_home_note_type"
            android:background="@drawable/bg_small_round_ffcd1f"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/c_999999"
            android:textSize="12sp"
            android:text="视频"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_home_note_avatar"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/tv_home_note_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/user_avatar" />

        <TextView
            android:id="@+id/tv_home_note_avatar_name"
            android:layout_toRightOf="@+id/iv_home_note_avatar"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/c_999999"
            android:textSize="14sp"
            android:text="刘德华"
            />



        <TextView
            android:id="@+id/tv_notes_other_agree"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/c_999999"
            android:textSize="14sp"
            android:text="点赞"
            />

        <TextView
            android:id="@+id/tv_notes_other_agree_number"
            android:layout_toLeftOf="@+id/tv_notes_other_agree"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/c_ff5b1f"
            android:textSize="14sp"
            android:text="999"
            />

        <TextView
            android:id="@+id/tv_notes_other_comment"
            android:layout_toLeftOf="@+id/tv_notes_other_agree_number"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/c_999999"
            android:textSize="14sp"
            android:text="评论 "
            />

        <TextView
            android:id="@+id/tv_notes_other_comment_number"
            android:layout_toLeftOf="@+id/tv_notes_other_comment"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/c_ff5b1f"
            android:textSize="14sp"
            android:text="999"
            />

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_999999"/>
</LinearLayout>