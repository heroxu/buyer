<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="277dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginRight="20dp"
    android:id="@+id/good_item">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/require_item_image"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/img_note_pic_02"/>

    <TextView
        android:id="@+id/require_item_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_main"
        android:textSize="@dimen/txt_size_15"
        android:text="NIKE HUARACHE DRIFT幼童运动限量版大童鞋"
        android:layout_toRightOf="@id/require_item_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/require_item_image"
        android:layout_below="@id/require_item_disc"
        android:id="@+id/temp1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_13"
            android:textColor="@color/txt_red"
            android:text="M.＄ 1,188.88"
            android:drawableLeft="@mipmap/ic_city_malaysia"
            android:gravity="center_vertical"
            android:layout_marginLeft="-8dp"
            />
        <TextView
            android:id="@+id/require_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txt_size_11"
            android:text="约1688.85元"
            />
    </LinearLayout>

</RelativeLayout>
