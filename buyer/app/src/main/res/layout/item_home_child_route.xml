<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="240dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_buyer_route"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_route"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <ImageView
                android:background="#80000000"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_home_ele"/>
            
            <TextView
                android:background="#80000000"
                android:id="@+id/check_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="已验证的行程"
                />

            <TextView
                android:background="@color/white"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_buyer_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/c_333333"
                android:text="1月20  出发"
                />

            <TextView
                android:background="@color/white"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_buyer_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/c_333333"
                android:text="1月28  返程"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_route_country"
            android:layout_below="@+id/ll_route"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:text="日本 - 韩国 - 马来西亚"
            android:textColor="@color/dot_red"
            />

        <TextView
            android:id="@+id/tv_can_buy"
            android:layout_below="@+id/tv_route_country"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:text="本次行程可代购"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/ll_route_classify"
            android:layout_below="@id/tv_can_buy"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <TextView
                android:background="@drawable/bg_title_rectangle"
                android:id="@+id/tv_route_classify_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="护肤美容"
                />

            <TextView
                android:background="@drawable/bg_title_rectangle"
                android:id="@+id/tv_route_classify_two"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="母婴用品"
                />

            <TextView
                android:background="@drawable/bg_title_rectangle"
                android:id="@+id/tv_route_classify_three"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="数码产品"
                />


        </LinearLayout>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/layout_iv_more"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/ll_route_classify"
            android:rotation="180"
            app:srcCompat="@drawable/ic_down_arrow" />
    </RelativeLayout>

</FrameLayout>