<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_order_remain_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_bg_normal"
        android:paddingBottom="9dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="9dp"
        android:visibility="gone"
        tools:text="订单剩 23:59:30 自动关闭"
        tools:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_order_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="25dp"
                android:visibility="gone"
                tools:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/line_order_paid"
                        android:layout_width="80dp"
                        android:layout_height="3dp"
                        android:layout_alignBottom="@+id/iv_order_await_pay"
                        android:layout_alignTop="@+id/iv_order_await_pay"
                        android:layout_marginLeft="-10dp"
                        android:layout_toRightOf="@+id/iv_order_await_pay"
                        android:src="@drawable/line_order_status_selector" />

                    <ImageView
                        android:id="@+id/line_order_shipped"
                        android:layout_width="80dp"
                        android:layout_height="3dp"
                        android:layout_alignBottom="@+id/iv_order_paid"
                        android:layout_alignTop="@+id/iv_order_paid"
                        android:layout_marginLeft="-10dp"
                        android:layout_toRightOf="@+id/iv_order_paid"
                        android:src="@drawable/line_order_status_selector" />

                    <ImageView
                        android:id="@+id/line_order_await_confirm"
                        android:layout_width="80dp"
                        android:layout_height="3dp"
                        android:layout_alignBottom="@+id/iv_order_shipped"
                        android:layout_alignTop="@+id/iv_order_shipped"
                        android:layout_marginLeft="-10dp"
                        android:layout_toRightOf="@+id/iv_order_shipped"
                        android:src="@drawable/line_order_status_selector" />

                    <CheckBox
                        android:id="@+id/iv_order_await_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/shape_order_status_selector"
                        android:clickable="false"
                        android:enabled="false"
                        tools:checked="true"
                        tools:enabled="true" />

                    <CheckBox
                        android:id="@+id/iv_order_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_toRightOf="@+id/line_order_paid"
                        android:button="@drawable/shape_order_status_selector"
                        android:clickable="false"
                        android:enabled="false"
                        tools:checked="false"
                        tools:enabled="true" />


                    <CheckBox
                        android:id="@+id/iv_order_shipped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_toRightOf="@+id/line_order_shipped"
                        android:button="@drawable/shape_order_status_selector"
                        android:clickable="false"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/iv_order_await_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/line_order_await_confirm"
                        android:button="@drawable/shape_order_status_selector"
                        android:clickable="false"
                        android:enabled="false" />

                    <CheckedTextView
                        android:id="@+id/tv_order_await_pay"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_order_await_pay"
                        android:checkMark="@null"
                        android:clickable="false"
                        android:text="@string/orders_awaiting_payment"
                        android:textAlignment="center"
                        android:textColor="@color/order_status_txt_selector"
                        android:textSize="@dimen/txt_size_13" />

                    <CheckedTextView
                        android:id="@+id/tv_order_paid"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_order_paid"
                        android:layout_alignTop="@+id/tv_order_await_pay"
                        android:layout_marginLeft="-20dp"
                        android:checkMark="@null"
                        android:clickable="false"
                        android:text="已付款"
                        android:textAlignment="center"
                        android:textColor="@color/order_status_txt_selector"
                        android:textSize="@dimen/txt_size_13" />

                    <CheckedTextView
                        android:id="@+id/tv_order_shipped"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_order_shipped"
                        android:layout_alignTop="@+id/tv_order_await_pay"
                        android:layout_marginLeft="-20dp"
                        android:checkMark="@null"
                        android:clickable="false"
                        android:text="已发货"
                        android:textAlignment="center"
                        android:textColor="@color/order_status_txt_selector"
                        android:textSize="@dimen/txt_size_13" />

                    <CheckedTextView
                        android:id="@+id/tv_order_await_confirm"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/iv_order_await_confirm"
                        android:layout_alignTop="@+id/tv_order_await_pay"
                        android:layout_marginLeft="-20dp"
                        android:checkMark="@null"
                        android:clickable="false"
                        android:text="待收货"
                        android:textAlignment="center"
                        android:textColor="@color/order_status_txt_selector"
                        android:textSize="@dimen/txt_size_13" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="40dp"
                android:paddingTop="40dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/iv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@mipmap/ic_successfu_transaction" />

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="交易成功" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/window_background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/iv_order_shipping_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_release_positioning" />

                <TextView
                    android:id="@+id/tv_order_shipping_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_order_shipping_position"
                    android:textColor="@color/txt_main"
                    android:textSize="@dimen/txt_size_17"
                    tools:text="阳鸿" />

                <TextView
                    android:id="@+id/tv_order_shipping_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_order_shipping_name"
                    android:textColor="@color/txt_main"
                    android:textSize="@dimen/txt_size_17"
                    tools:text="13760685049" />

                <TextView
                    android:id="@+id/tv_order_shipping_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_order_shipping_name"
                    android:layout_below="@+id/tv_order_shipping_phone"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="广东省广州市天河区冼村街道合景国际金融大厦32 楼3205室" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/window_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_order_seller_avatar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/lay_my_username"
                    android:layout_marginRight="5dp"
                    tools:src="@mipmap/fake_seller_avatar" />

                <TextView
                    android:id="@+id/tv_order_seller_name"
                    style="@style/WideItemMiddleRight.Text.Ellipsize"
                    android:gravity="left"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="我是小桂子的桂子" />

                <TextView
                    android:id="@+id/tv_order_contact_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_details_news"
                    android:drawablePadding="5dp"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="联系买手" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/window_background" />

            <com.smyy.sharetour.buyer.view.InnerRecyclerView
                android:id="@+id/rv_order_goods_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/btn_bg_normal" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    app:alignItems="baseline"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_end">

                    <TextView
                        android:id="@+id/tv_order_goods_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/txt_main"
                        android:textSize="@dimen/txt_size_13"
                        tools:text="共1件商品" />

                    <TextView
                        android:id="@+id/tv_order_price_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_main"
                        android:textSize="@dimen/txt_size_13"
                        tools:text="总额：478638" />

                    <TextView
                        android:id="@+id/tv_order_shipping_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_gray_dark"
                        android:textSize="@dimen/txt_size_11"
                        tools:text="（含运费）" />
                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/window_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_gray_dark"
                        android:textSize="@dimen/txt_size_13"
                        tools:text="订单编号：201803071438023384" />

                    <TextView
                        android:id="@+id/tv_order_copy_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:paddingTop="25dp"
                        android:text="复制"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/txt_size_13"
                    tools:text="下单时间：2018-03-08 14:39:07" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/window_background" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shape_bottom_gradient" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            app:alignItems="baseline"
            app:flexWrap="wrap"
            app:justifyContent="flex_end"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_order_verify_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="鉴定视频"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_contact_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="联系客服"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_remind_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="提醒发货"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="删除订单"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_view_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="查看物流"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="取消订单"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_ffcd1f"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="付款"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_ffcd1f"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="确认收货"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rounded_rectangle_ffcd1f"
                android:gravity="center"
                android:minWidth="75dp"
                android:text="评价"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>


</LinearLayout>