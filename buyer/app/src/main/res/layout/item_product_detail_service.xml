<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_product_detail_comment_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_17"
        android:textColor="@color/txt_main"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="@string/product_detail_service"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comments_bg"
        android:layout_margin="@dimen/margin_10"
        android:orientation="vertical">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_17"
            android:textColor="@color/txt_main"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="@string/product_detail_money_desc"/>
        <TextView
            android:layout_marginBottom="@dimen/margin_10"
            android:id="@+id/tv_product_detail_service_money_desc"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:textSize="@dimen/txt_size_13"
            android:textColor="@color/txt_gray_dark"
            android:text="在推出全新的拉链设计版本后，带计，而帮带上印有的 “NIKE” 字鞋款的穿搭灵活性，再加上 3M 反光细节的鞋带，彰显活力氛围。"/>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_17"
            android:textColor="@color/txt_main"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="@string/product_detail_send_product"/>
        <TextView
            android:layout_marginBottom="@dimen/margin_10"
            android:id="@+id/tv_product_detail_send_product"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:textSize="@dimen/txt_size_13"
            android:textColor="@color/txt_gray_dark"
            android:text="在推出全新的拉链设计版本后，带计，而帮带上印有的 “NIKE” 字鞋款的穿搭灵活性，再加上 3M 反光细节的鞋带，彰显活力氛围。"/>
    </LinearLayout>
</LinearLayout>
