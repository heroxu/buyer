<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_my_interests"
                style="@style/WideItem.Text.WithArrow"
                android:text="我的兴趣" />

            <View
                style="@style/LineDivider.Horizon"
                android:layout_height="10dp"
                android:background="@color/window_background" />

            <TextView
                android:id="@+id/tv_my_bankcard"
                style="@style/WideItem.Text.WithArrow"
                android:text="我的银行卡" />


            <View
                style="@style/LineDivider.Horizon"
                android:layout_height="10dp"
                android:background="@color/window_background" />

            <TextView
                android:id="@+id/tv_my_account_settings"
                style="@style/WideItem.Text.WithArrow"
                android:text="个人管理" />

            <View style="@style/WideItemDivider" />


            <TextView
                android:id="@+id/tv_my_message_settings"
                style="@style/WideItem.Text.WithArrow"
                android:text="@string/message_settings" />

            <View style="@style/WideItemDivider" />


            <LinearLayout
                android:id="@+id/lay_my_change_theme"
                style="@style/WideItem">

                <TextView
                    style="@style/WideItemLeftText"
                    android:text="@string/change_theme" />

                <TextView
                    android:id="@+id/tv_my_current_theme"
                    style="@style/WideItemMiddleRight.Text.Ellipsize"
                    tools:text="主题2" />

                <ImageView style="@style/WideItemRightArrow" />
            </LinearLayout>

            <View style="@style/WideItemDivider" />


            <LinearLayout
                android:id="@+id/lay_my_clear_cache"
                style="@style/WideItem">

                <TextView
                    style="@style/WideItemLeftText"
                    android:text="@string/clear_cache" />

                <TextView
                    android:id="@+id/tv_my_cache_size"
                    style="@style/WideItemMiddleRight.Text.Ellipsize"
                    android:textColor="@color/txt_gray_dark"
                    tools:text="120MB" />
            </LinearLayout>

            <View
                style="@style/LineDivider.Horizon"
                android:layout_height="10dp"
                android:background="@color/window_background" />


            <LinearLayout
                android:id="@+id/lay_my_about_us"
                style="@style/WideItem">

                <TextView
                    style="@style/WideItemLeftText"
                    android:text="@string/about_us" />

                <TextView
                    android:id="@+id/tv_my_version_code"
                    style="@style/WideItemMiddleRight.Text.Ellipsize"
                    tools:text="v1.0.0" />

                <ImageView style="@style/WideItemRightArrow" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
