<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_message_list_avatar"
        android:layout_marginStart="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/user_avatar" />

    <TextView
        android:id="@+id/iv_message_list_avatar_name"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/iv_message_list_avatar"
        android:layout_toEndOf="@+id/iv_message_list_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_10"
        android:textColor="@color/txt_main"
        android:textSize="@dimen/txt_size_15"
        android:text="刘德华"/>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/iv_message_list_avatar_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:id="@+id/iv_message_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_10"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/txt_size_11"
        android:text="19:32"/>
    <TextView
        android:id="@+id/iv_message_list_content"
        android:layout_marginTop="3dp"
        android:layout_alignBottom="@+id/iv_message_list_avatar"
        android:layout_toEndOf="@+id/iv_message_list_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_10"
        android:textColor="@color/txt_gray_dark"
        android:textSize="@dimen/txt_size_13"
        android:text="你能帮我代购几个NIKE的包包吗？"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:background="@color/line_divider"/>
</RelativeLayout>