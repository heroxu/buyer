<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lay_order_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_order_bottom_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="更多"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_13" />

            <TextView
                android:id="@+id/tv_order_bottom_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_bottom_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_rounded_rectangle_stroke_gray"
                android:gravity="center"
                android:minWidth="75dp"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_order_bottom_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rounded_rectangle_ffcd1f"
                android:gravity="center"
                android:minWidth="75dp"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_13" />

        </LinearLayout>
    </LinearLayout>

</merge>