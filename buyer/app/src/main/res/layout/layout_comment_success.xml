<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_message_box">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp"
            android:src="@mipmap/ic_expression_ele"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thank_comment"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/txt_size_15"
            android:layout_gravity="center_horizontal"/>

        <View style="@style/WideItemDivider"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/view_orders"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableRight="@mipmap/arrow_right_normal"
            android:drawablePadding="6dp"
            android:textSize="@dimen/txt_size_15"
            android:text="@string/view_my_comments"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/close_publish_success_dialog"
        android:layout_marginTop="20dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_off"
        android:visibility="gone"/>
</LinearLayout>
