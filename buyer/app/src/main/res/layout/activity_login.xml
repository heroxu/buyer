<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_user" />

    <TextView
        android:id="@+id/tv_module_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="手机号登录"
        android:textColor="@color/txt_main"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/ll_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_region"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/arrow_right_selector"
            android:gravity="center|left"
            android:text="中国"
            android:textColor="@color/txt_main"
            android:textSize="17sp" />

        <include layout="@layout/ab_common_view_divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_area_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="+86"
                android:textColor="@color/txt_gray"
                android:textSize="17sp" />

            <com.smyy.sharetour.buyer.ClearWriteEditText
                android:id="@+id/edit_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLines="1"
                android:textColorHint="@color/txt_gray_light"
                android:textSize="17sp" />
        </LinearLayout>

        <include layout="@layout/ab_common_view_divider" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.smyy.sharetour.buyer.ClearWriteEditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入密码"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="@color/txt_gray_light"
                android:textSize="17sp" />
        </LinearLayout>

        <include layout="@layout/ab_common_view_divider" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_has_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="有账号？"
            android:textColor="@color/txt_gray_dark"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去登录"
            android:textColor="@color/txt_hint"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg_selector"
        android:enabled="false"
        android:text="确定"
        android:textColor="@color/btn_txt_selector"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/ll_register_deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册代表你已同意"
            android:textColor="@color/txt_gray_dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/btv_register_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="注册协议"
            android:textColor="@color/txt_hint"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/txt_gray_dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/btv_privacy_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="隐私协议"
            android:textColor="@color/txt_hint"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btv_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="密码登录"
        android:textColor="@color/txt_hint"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_login_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="9dp"
            android:text="微信快捷登录"
            android:textColor="@color/txt_gray"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
