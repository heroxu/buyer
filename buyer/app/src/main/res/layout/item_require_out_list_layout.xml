<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/txt_size_13"
        android:id="@+id/require_item_state"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="已失效"/>


    <View style="@style/WideItemDivider"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/require_item_image"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/img_note_pic_02"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_rectangle_translucence"/>

        <TextView
            android:id="@+id/require_item_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txt_size_15"
            android:layout_toRightOf="@id/require_item_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/require_item_image"
            android:layout_below="@id/require_item_disc"
            android:id="@+id/temp1"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_15"
                android:textColor="@color/txt_gray"
                android:text="@string/price"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/require_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_15"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/temp1"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/require_item_image"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/require_item_time_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_budget_time_g"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:id="@+id/require_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_15"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/require_out_item_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:visibility="visible">
        <View style="@style/WideItemDivider"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            />

        <TextView
            android:id="@+id/require_item_delete"
            android:layout_width="74dp"
            android:layout_height="30dp"
            android:background="@drawable/view_tag_bg"
            android:text="@string/delete"
            android:gravity="center"
            android:textSize="@dimen/txt_size_13"
            android:textColor="@color/txt_gray_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
