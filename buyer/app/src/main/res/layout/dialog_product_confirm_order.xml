<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_17"
            android:layout_centerInParent="true"
            android:text="@string/product_detail_order_edit"
            />
        <TextView
            android:id="@+id/tv_product_detail_order_cancel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_13"
            android:layout_centerInParent="true"
            android:text="@string/cancel"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_new_sell_product_pic"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:textSize="25sp"
                    android:src="@mipmap/home_new_sell"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_new_sell_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/txt_main"
                        android:textSize="12sp"
                        android:text="NIKE HUARACHE DRIFT幼童运动限量版大童鞋 "
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_new_sell_product_price"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:textColor="@color/txt_gray_dark"
                            android:textSize="@dimen/txt_size_13"
                            android:text="规格：黑白/36.5"
                            />
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:textColor="@color/txt_gray_dark"
                            android:textSize="@dimen/txt_size_13"
                            android:text="x1"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_city_korea"/>
                        <TextView
                            android:layout_marginStart="@dimen/margin_10"
                            android:id="@+id/tv_new_sell_product_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:textColor="@color/txt_price"
                            android:textSize="@dimen/txt_size_13"
                            android:text="¥456.9"
                            />
                        <TextView
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textColor="@color/txt_gray_dark"
                            android:textSize="@dimen/txt_size_13"
                            android:text="(约18382元)"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_main"
                    android:textSize="@dimen/txt_size_17"
                    android:text="@string/product_detail_order_color"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_order_confirm_color"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_margin="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_main"
                    android:textSize="@dimen/txt_size_17"
                    android:text="@string/product_detail_order_size"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_order_confirm_size"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="122dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rectangle_stroke_gray"
                android:layout_margin="@dimen/margin_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="@dimen/txt_size_15"
                    android:textColor="@color/txt_gray_dark"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="8"
                    android:background="@drawable/bg_rectangle_stroke_gray"
                    android:textSize="@dimen/txt_size_15"
                    android:textColor="@color/txt_gray_dark"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="@dimen/txt_size_15"
                    android:textColor="@color/txt_main"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:id="@+id/ll_product_detail_bottom_buy"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_product_detail_add_bag"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_15"
                android:text="加入小背包"
                android:background="@drawable/bg_rectangle_fill_black"/>

            <TextView
                android:id="@+id/tv_product_detail_add_cart"
                android:textColor="@color/txt_main"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="@dimen/txt_size_15"
                android:text="立即购买"
                android:background="@drawable/bg_rectangle_fill_yellow"/>
        </LinearLayout>
</LinearLayout>