<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <LinearLayout
        android:id="@+id/ll_glogin_close"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="19dp"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_off" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tv_glogin_logo"
        android:layout_width="170dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:src="@mipmap/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_glogin_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="全球旅行分享购物平台"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_glogin_register"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginRight="39dp"
            android:background="@drawable/shape_glogin_register"
            android:text="注册"
            android:textColor="@color/txt_main"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_glogin_login"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@drawable/shape_glogin_login"
            android:text="登录"
            android:textColor="@color/txt_main"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_glogin_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="9dp"
            android:text="微信快捷登录"
            android:textColor="@color/txt_gray_transparent"
            android:textSize="13sp" />
    </LinearLayout>


</RelativeLayout>
