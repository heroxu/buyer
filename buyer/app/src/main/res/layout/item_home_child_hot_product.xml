<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hot_product_pic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/home_hot_product"/>

    <TextView
        android:id="@+id/tv_hot_product_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/c_333333"
        android:textSize="12sp"
        android:text="NIKE HUARACHE DRIFT幼童运动限量版大童鞋 "
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hot_product_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/c_ff5b1f"
                android:textSize="14sp"
                android:text="¥456.9"
                />

            <TextView
                android:id="@+id/tv_hot_product_price_before"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:text="¥456.9"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_hot_product_seller_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/user_avatar" />

        <TextView
            android:id="@+id/tv_hot_product_seller_name"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/c_999999"
            android:textSize="14sp"
            android:text="刘德华"
            />

    </LinearLayout>



</LinearLayout>