<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_confirm_order_product_pic"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:src="@mipmap/home_new_sell"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_confirm_order_product_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/txt_main"
                android:textSize="12sp"
                android:text="NIKE HUARACHE DRIFT幼童运动限量版大童鞋 "
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_confirm_order_product_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_city_korea"/>
                <TextView
                    android:id="@+id/tv_confirm_order_product_price"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textColor="@color/txt_price"
                    android:textSize="@dimen/txt_size_13"
                    android:text="¥456.9"
                    />
                <TextView
                    android:id="@+id/tv_confirm_order_product_price_rmb"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/txt_size_13"
                    android:text="(约18382元)"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

</LinearLayout>




