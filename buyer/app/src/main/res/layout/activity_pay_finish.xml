<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/ic_successfu_transaction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingTop="48dp">

        <TextView
            android:id="@+id/view_require"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginRight="45dp"
            android:background="@color/btn_bg_normal"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@color/txt_main"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/return_backpacker_home"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@color/tab_txt_selected"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_release_positioning" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_buyer_name"
                style="@style/CommonText"
                android:text="阳鸿"
                android:textSize="@dimen/txt_size_17" />

            <TextView
                android:id="@+id/tv_buyer_phone"
                style="@style/CommonText"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_buyer_name"
                android:text="18612345678"
                android:textSize="@dimen/txt_size_17" />

            <TextView
                android:id="@+id/tv_buyer_shipping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_buyer_phone"
                android:layout_marginTop="10dp"
                android:text="广东省广州市天河区冼村街道 珠江新城华夏路8号合景国际金融广场 32楼3205"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>