<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/require_item_head"
                android:layout_centerVertical="true"
                android:src="@mipmap/user_avatar"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/require_seller_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_15"
                android:text="小狗子的狗子"
                android:layout_toRightOf="@id/require_item_head"/>
            <TextView
                android:id="@+id/require_seller_item_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/txt_size_13"
                android:text="常去：美国、英国、澳大利亚"
                android:layout_marginTop="8dp"
                android:layout_below="@id/require_seller_item_name"
                android:layout_toRightOf="@id/require_item_head"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_11"
                android:layout_alignParentRight="true"
                android:id="@+id/require_item_state"
                android:drawableLeft="@mipmap/icon_radio_check"
                android:drawablePadding="6dp"
                android:text="信任值90分"/>
        </RelativeLayout>

        <View style="@style/WideItemDivider"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_15"
                android:textColor="@color/txt_main"
                android:text="03月28日 抵达 日本"
                android:drawableLeft="@drawable/shape_black_dot"
                android:drawablePadding="15dp"
                />
            <TextView
                android:id="@+id/require_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_15"
                android:text="04月05日 抵达 马来西亚"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/shape_black_dot"
                android:drawablePadding="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_main"
                android:textSize="@dimen/txt_size_15"
                android:text="04月08日 抵达 韩国"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/shape_black_dot"
                android:drawablePadding="15dp"
                />
        </LinearLayout>


        <View style="@style/WideItemDivider"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:id="@+id/require_out_item_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            >

            <TextView
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:text="@string/order_receiving"
                android:textSize="@dimen/txt_size_13"
                android:textColor="@color/txt_price"
                android:layout_centerVertical="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/require_item_contact"
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_white_contact_buy"
                android:text="@string/contact_seller"
                android:textSize="@dimen/txt_size_13"
                android:textColor="@color/txt_gray_dark"
                android:layout_toLeftOf="@+id/require_item_point"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/require_item_point"
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_fount_note_type"
                android:text="@string/point_ta"
                android:gravity="center"
                android:textSize="@dimen/txt_size_13"
                android:textColor="@color/txt_gray_dark"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>