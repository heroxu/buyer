<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_my_seller_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            tools:src="@mipmap/fake_seller_avatar" />

        <TextView
            android:id="@+id/tv_my_seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/tv_my_review"
            android:layout_toRightOf="@+id/iv_my_seller_avatar"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_15"
            tools:text="我是小桂子的桂子" />

        <TextView
            android:id="@+id/tv_my_seller_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_my_seller_name"
            android:layout_alignRight="@+id/tv_my_seller_name"
            android:layout_below="@+id/tv_my_seller_name"
            android:drawableLeft="@mipmap/ic_home_location"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txt_size_13"
            tools:text="美国 纽约" />

        <TextView
            android:id="@+id/tv_my_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_rounded_rectangle_ffcd1f"
            android:gravity="center"
            android:minWidth="75dp"
            android:text="立即沟通"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.smyy.sharetour.buyer.view.AutoScaleHeightImageView
            android:id="@+id/iv_my_seller_goods1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/fake_goods_pic" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <com.smyy.sharetour.buyer.view.AutoScaleHeightImageView
            android:id="@+id/iv_my_seller_goods2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/fake_goods_pic" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <com.smyy.sharetour.buyer.view.AutoScaleHeightImageView
            android:id="@+id/iv_my_seller_goods3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/fake_goods_pic" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_divider" />
</LinearLayout>
