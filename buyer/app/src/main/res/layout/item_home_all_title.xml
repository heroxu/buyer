<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/title_color_333333"
        tools:text="买手行程"
        />
    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_toEndOf="@+id/tv_main_title"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:textColor="@color/title_color_999999"
        tools:text="真实出行"
        />
    <LinearLayout
        android:id="@+id/ll_more"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="更多"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/layout_iv_more"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:rotation="180"
            android:layout_marginStart="3dp"
            app:srcCompat="@drawable/ic_down_arrow"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_change"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_10"
        android:background="@drawable/bg_title_rounded_rectangle"
        android:text="换一批"
        />
        <!--<include layout="@layout/layout_more" />-->
</RelativeLayout>