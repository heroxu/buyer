<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="20dp">

    <TextView
        android:id="@+id/tv_my_statement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/txt_main"
        android:textSize="@dimen/txt_size_17"
        tools:text="一只大榴莲" />

    <TextView
        android:id="@+id/tv_my_statement_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_my_statement_name"
        android:layout_marginTop="5dp"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/txt_size_13"
        tools:text="2018-01-21 10:30:12" />

    <TextView
        android:id="@+id/tv_my_wallet_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/tv_my_statement_time"
        android:gravity="right"
        android:textColor="@color/txt_price"
        android:textSize="@dimen/txt_size_19"
        tools:text="+ 100.00" />


    <View
        style="@style/LineDivider.Horizon"
        android:layout_below="@+id/tv_my_statement_time"
        android:layout_marginTop="20dp" />
</RelativeLayout>
