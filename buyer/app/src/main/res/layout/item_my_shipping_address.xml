<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp">

        <RadioButton
            android:id="@+id/rb_my_shipping_default"
            style="@style/CommonCheckBox"
            android:layout_marginRight="15dp"
            android:checked="true"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_my_shipping_name"
                style="@style/CommonText"
                android:textSize="@dimen/txt_size_17"
                tools:text="张晓安" />

            <TextView
                android:id="@+id/tv_my_shipping_phone"
                style="@style/CommonText"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_my_shipping_name"
                android:textSize="@dimen/txt_size_17"
                tools:text="18612345678" />

            <TextView
                android:id="@+id/tv_my_shipping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_my_shipping_phone"
                android:layout_marginTop="10dp"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/txt_size_13"
                tools:text="广东省广州市天河区冼村街道 珠江新城华夏路8号合景国际金融广场 32层" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_divider" />
</LinearLayout>
